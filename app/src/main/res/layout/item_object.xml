<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.App.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardElevation="2dp"
    app:rippleColor="@color/mint_light">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/objectImage"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/background_page"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_objects"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/text_secondary"
            android:padding="40dp"/> <!-- Placeholder padding/tint -->

        <TextView
            android:id="@+id/objectName"
            style="@style/TextAppearance.App.Subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:text="Perceuse sans fil Bosch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/objectImage"/>

        <TextView
            android:id="@+id/objectDesc"
            style="@style/TextAppearance.App.Body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="4dp"
            android:text="Description de l'objet..."
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/objectName"/>

        <TextView
            android:id="@+id/objectStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_status_pill"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="Disponible"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/status_available"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/objectDesc"/>

        <Button
            android:id="@+id/btnView"
            style="@style/Widget.App.Button.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Voir"
            android:minHeight="0dp"
            android:paddingVertical="8dp"
            app:layout_constraintBottom_toBottomOf="@id/objectStatus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/objectStatus"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
