<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_page">

    <!-- Header Toolbar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon Profil"
            style="@style/TextAppearance.App.Subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Profile Header Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.App.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/avatar"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_profile"
                        android:background="@drawable/ic_profile"
                        android:backgroundTint="@color/mint_light"
                        app:tint="@color/mint_dark"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/profileName"
                        style="@style/TextAppearance.App.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Utilisateur"
                        app:layout_constraintStart_toEndOf="@id/avatar"
                        app:layout_constraintTop_toTopOf="@id/avatar"/>

                    <TextView
                        android:id="@+id/profileEmail"
                        style="@style/TextAppearance.App.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Membre"
                        app:layout_constraintStart_toEndOf="@id/avatar"
                        app:layout_constraintTop_toBottomOf="@id/profileName"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:text="Modifier le profil"
                        android:textColor="@color/mint_primary"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/avatar"
                        app:layout_constraintTop_toBottomOf="@id/profileEmail"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Membership Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.App.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="Adhésion"
                        android:textSize="12sp"
                        android:textColor="@color/mint_primary"/>

                    <TextView
                        android:text="Adhérent Actif"
                        style="@style/TextAppearance.App.Subtitle"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:text="Expire le : 12/12/2024"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Mon Activité -->
            <TextView
                android:text="MON ACTIVITÉ"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.App.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include android:id="@+id/btnMyReservations" layout="@layout/item_profile_option"/>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/background_page"/>
                    <include android:id="@+id/btnHistory" layout="@layout/item_profile_option"/>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/background_page"/>
                    <include android:id="@+id/btnFavorites" layout="@layout/item_profile_option"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Aide et Infos -->
            <TextView
                android:text="AIDE ET INFORMATIONS"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.App.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include android:id="@+id/btnFaq" layout="@layout/item_profile_option"/>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/background_page"/>
                    <include android:id="@+id/btnPrivacy" layout="@layout/item_profile_option"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Logout -->
            <Button
                android:id="@+id/logoutButton"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Déconnexion"
                android:textColor="@color/status_unavailable"
                android:backgroundTint="#FEE2E2"/> <!-- Light Red -->

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
